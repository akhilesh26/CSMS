from PyQt5 import QtWidgets
from Pages.UI.transferUi import Ui_fromBalanceLabel

class TransferForm(QtWidgets.QWidget, Ui_fromBalanceLabel):
    def __init__(self):
        super().__init__()
        self.setupUi(self)
        self.show()

        self.submitPushButton.clicked.connect(self.getvalues)

    def getvalues(self):
        self.fromMember = self.fromMemberLineEdit.text()
        self.fromBalance = 10000.0
        self.fromBalanceLabel_2.text(self.fromBalance)
        self.fromBalanceLabel_2 = QtWidgets.QLabel(fromBalanceLabel)
        self.fromAmountLineEdit = QtWidgets.QLineEdit(fromBalanceLabel)
        self.dateEdit = QtWidgets.QDateEdit(fromBalanceLabel)
        self.fromPhotoLabel = QtWidgets.QLabel(fromBalanceLabel)
        self.toMemberLineEdit = QtWidgets.QLineEdit(fromBalanceLabel)
        self.toNameLineEdit = QtWidgets.QLineEdit(fromBalanceLabel)
        self.accountComboBox = QtWidgets.QComboBox(fromBalanceLabel)
        self.toBalanceLabel = QtWidgets.QLabel(fromBalanceLabel)
        self.toPhotoLabel = QtWidgets.QLabel(fromBalanceLabel)
